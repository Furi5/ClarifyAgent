# Anthropic API Configuration
# 获取 API Key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration (可选，使用默认值)
# 策略：Opus 用于关键思考，Sonnet 用于快速合成

# Clarifier 模型 - 用于澄清用户需求（使用 Opus 保证理解质量）
CLARIFIER_MODEL=claude-opus-4-20250514

# Planner 模型 - 用于规划研究方向（使用 Opus 保证规划质量）
PLANNER_MODEL=claude-opus-4-20250514

# Executor 模型 - 用于执行搜索任务（使用 Opus 保证执行准确性）
EXECUTOR_MODEL=claude-opus-4-20250514

# Synthesizer 模型 - 用于综合研究结果（使用 Sonnet 提高速度）
SYNTHESIZER_MODEL=claude-sonnet-4-20250514

# Fast Model - 用于快速合成
FAST_MODEL=claude-sonnet-4-20250514

# Quality Model - 用于关键决策
QUALITY_MODEL=claude-opus-4-20250514

# Other API Keys (如果需要)
# SerpAPI - 用于网络搜索
SERPAPI_API_KEY=your_serpapi_key_here

# Jina AI - 用于深度内容阅读（可选）
JINA_API_KEY=your_jina_key_here

# Performance Configuration (可选)
MAX_PARALLEL_SUBAGENTS=5
MAX_TOOL_CALLS_PER_AGENT=5
MAX_CONTENT_CHARS=3000
MAX_SEARCH_RESULTS=10
MAX_SNIPPET_CHARS=200
MAX_TOOL_OUTPUT=2000
API_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=4
ADAPTIVE_CONCURRENCY=true
